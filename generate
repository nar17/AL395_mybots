import pyrosim.pyrosim as pyrosim

pyrosim.Start_SDF("box.sdf")
length = 1
width = 1
height = 1
x = 0
y = 0
z = 0.5

for i in range (3):
	pyrosim.Send_Cube(name="Box", pos=[x,y,z] , size=[length,width,height])
	z += 1.5
	length *= 0.9
	width *= 0.9
	height *= 0.9	
	for t in range (i):
		pyrosim.Send_Cube(name="Box", pos=[x,y,z] , size=[length,width,height])
		x += 1.5 
		y += 1.5
		length *= 0.9
		width *= 0.9
		height *= 0.9	
	
	
	

pyrosim.End()