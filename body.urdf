<robot name = "robot">
    <link name="link1">
        <inertial>
            <origin xyz="0 0 1" rpy="0 0 0"/>
            <mass value="100" />
            <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100" />
        </inertial>
        <visual>
            <origin xyz="0 0 1" rpy="0 0 0"/>
            <geometry>
                <box size="2 2 2" />
            </geometry>
            <material name="Green">
                <color rgba="0 1 0 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 1" rpy="0 0 0"/>
            <geometry>
                <box size="2 2 2" />
            </geometry>
        </collision>
    </link>
    <joint name="link1_link2_xy" type="revolute">
       <parent link="link1"/>
       <child  link="link2"/>
       <origin rpy="0 0 0" xyz="0 1 1" />
       <axis xyz="0 0 1"/>
       <limit effort="0.0" lower="-3.14159" upper="3.14159" velocity="0.0"/>
    </joint>
    <link name="link2">
        <inertial>
            <origin xyz="0 1.5 0" rpy="0 0 0"/>
            <mass value="1" />
            <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100" />
        </inertial>
        <visual>
            <origin xyz="0 1.5 0" rpy="0 0 0"/>
            <geometry>
                <box size="1 1.5 1" />
            </geometry>
            <material name="Green">
                <color rgba="0 1 0 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 1.5 0" rpy="0 0 0"/>
            <geometry>
                <box size="1 1.5 1" />
            </geometry>
        </collision>
    </link>
</robot>